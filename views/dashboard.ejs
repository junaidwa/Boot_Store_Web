<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h1 class="mb-4">Admin Dashboard</h1>
  <p class="lead">Here you can manage your Book Store data.</p>

  <!-- Users Section -->
  <h2 class="mt-5">Users</h2>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user._id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Books Section -->
  <h2 class="mt-5">Books</h2>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Price</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(book => { %>
        <tr>
          <td><%= book._id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td>$<%= book.price %></td>
          <td><%= book.description %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Orders Section -->
  <h2 class="mt-5">Orders</h2>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Customer Name</th>
        <th>Address</th>
        <th>Payment Method</th>
        <th>Total Amount</th>
        <th>Books</th>
        <th>Status</th>
        <th>Order Date</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order._id %></td>
          <td><%= order.customerName %></td>
          <td>
            <%= order.address %>, 
            <%= order.city %>, 
            <%= order.postalCode %>, 
            <%= order.country %>
          </td>
          <td><%= order.paymentMethod %></td>
          <td>$<%= order.totalAmount %></td>
          <td>
            <ul>
              <% order.books.forEach(b => { %>
                <li>
                  <%= b.title %> by <%= b.author %> 
                  (x<%= b.quantity %>) - $<%= b.price %>
                </li>
              <% }) %>
            </ul>
          </td>
          <td><%= order.status %></td>
          <td><%= order.orderDate.toDateString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
