<% layout('layouts/boilerplate') %>
<body class="container mt-4">

  <div class="row">
    <!-- ðŸ“š Sidebar for Categories -->
    <div class="col-md-3">
      <h4>Categories</h4>
      <ul class="list-group">

        <!-- "All" button -->
        <li class="list-group-item <%= selectedCategory === 'All' ? 'active' : '' %>">
          <a href="/books" class="<%= selectedCategory === 'All' ? 'text-white' : '' %>">All</a>
        </li>

        <% const categories = [
          "Fiction",
          "Non-fiction",
          "Science",
          "History",
          "Islamic",
          "Kids",
          "Comics",
          "Biography",
          "Education",
          "Technology"
        ]; %>

        <% categories.forEach(cat => { %>
          <li class="list-group-item <%= selectedCategory === cat ? 'active' : '' %>">
            <a href="/books/category/<%= cat %>" class="<%= selectedCategory === cat ? 'text-white' : '' %>">
              <%= cat %>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- ðŸ“– Book List Section -->
    <div class="col-md-9">
      <h1>
        <% if (selectedCategory === 'All') { %>
          All Books
        <% } else { %>
          <%= selectedCategory %> Books
        <% } %>
      </h1>

      <a href="/new" class="btn btn-primary mb-3">Add New Book</a>

      <div class="row">
        <% if (books.length === 0) { %>
          <p>No books found in this category.</p>
        <% } %>

        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">

              <!-- âœ… Display image correctly -->
              <% if (book.image && book.image.url) { %>
                <img src="<%= book.image.url %>" class="card-img-top" alt="<%= book.title %>" />
              <% } else { %>
                <!-- ðŸ–¼ï¸ Fallback image if none uploaded -->
                <img src="https://via.placeholder.com/300x400?text=No+Image" class="card-img-top" alt="No image available" />
              <% } %>

              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text">Author: <%= book.author %></p>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text fw-bold">Price: $<%= book.price.toFixed(2) %></p>
                <p class="text-muted">Category: <%= book.category %></p>
              </div>

              <div class="card-footer text-center">
                <a href="/books/<%= book._id %>/edit" class="btn btn-warning btn-sm">Edit</a>

                <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>

                <form action="/cart" method="POST" style="display:inline;">
                  <input type="hidden" name="bookId" value="<%= book._id %>">
                  <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                </form>
              </div>

            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

</body>
